<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts">
	<!-- 不需要过滤的请求 -->
	<excludes>
		<pattern>/assets/*</pattern><!-- web资源，js、css等 -->
		<pattern>/system/loginpage</pattern><!-- 首页登录页面，不需要装饰 -->
		<pattern>/plugins/*</pattern>
		<pattern>/remote/*</pattern>
		<pattern>/f/*</pattern>
	</excludes>
	<!-- 定义装饰器default要过滤的页面 -->
	<decorator name="default" page="default.jsp">
		<pattern>/*</pattern>
	</decorator>
	
</decorators>
